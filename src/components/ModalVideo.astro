---
import { YouTube } from "astro-embed";
const videoUrl = "/vkpIaCWO4ec";
---

<!-- Modal Structure -->
<div id="videoModal" class="modal z-50 rounded-md">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <div class="video-container relative">
            <YouTube
                id="vkpIaCWO4ec"
                title="Introduction Video"
                playlabel="Play"
                class="absolute left-0 right-0 top-0 bottom-0 !max-w-full !max-h-full"
            />
        </div>
    </div>
</div>

<style lang="less">
    /* Modal Styles */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1001; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgba(0, 0, 0, 0.8); /* Black w/ opacity */
        align-items: center;
        justify-content: center;
        border-radius: 16px;
    }

    .modal-content {
        position: relative;
        background-color: #111;
        margin: auto;
        padding: 0;
        width: 90%;
        max-width: 800px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        animation-name: animatetop;
        animation-duration: 0.4s;
        border-radius: 16px;

        lite-youtube {
            border-radius: 16px;
        }
    }

    @keyframes animatetop {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .close-button {
        color: #fff;
        float: right;
        font-size: 35px;
        font-weight: bold;
        padding: 10px 20px;
        cursor: pointer;
        transition: color 0.3s;
    }

    .close-button:hover,
    .close-button:focus {
        color: #bbb;
        text-decoration: none;
        cursor: pointer;
    }

    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        padding-top: 25px;
        height: 0;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

<!-- JavaScript for Modal Functionality -->
<script>
    // Get modal element
    const modal = document.getElementById("videoModal");

    // Get the element that opens the modal
    const openModalButton = document.querySelector(".watch-intro-button");

    // Get the <span> element that closes the modal
    const closeButton = document.querySelector(".close-button");

    // When the user clicks the button, open the modal
    openModalButton?.addEventListener("click", () => {
        if (modal) {
            modal.style.display = "flex";
            const iframe = modal.querySelector("iframe");
            if (!iframe) return;
            iframe.src += "?autoplay=1";
        }
    });

    // When the user clicks on <span> (x), close the modal
    closeButton?.addEventListener("click", () => {
        if (modal) {
            modal.style.display = "none";
            const iframe = modal.querySelector("iframe");
            if (!iframe) return;
            iframe.src = iframe.src.replace("?autoplay=1", "");
        }
    });

    // When the user clicks anywhere outside of the modal content, close it
    window.addEventListener("click", (event) => {
        if (event.target == modal && modal) {
            modal.style.display = "none";
            const iframe = modal.querySelector("iframe");
            if (!iframe) return;
            iframe.src = iframe.src.replace("?autoplay=1", "");
        }
    });
</script>
