---
import { Picture } from "astro:assets";
import divider from "@assets/images/fancyDivider.svg";
import landingImage from "@assets/images/landing.jpg";
const { title, image } = Astro.props;
---

<!-- ============================================ --><!--                   Banner                     --><!-- ============================================ -->
<div id="banner-1004">
    <div class="cs-container">
        <!-- <span class="cs-int-title">{title}</span> -->
    </div>
    <!--Background Image-->
    <div class="cs-background">
        <Picture
            src={image}
            formats={["avif", "webp"]}
            alt="landing image background"
            aria-hidden="true"
            decoding="async"
            loading="eager"
            width="100%"
            height="100%"
            sizes="100vw"
        />
    </div>
</div>

<style lang="less">
    /* Mobile - 360px */
    @media only screen and (min-width: 0em) {
        #banner-1004 {
            padding: 0 (16/16rem);
            /* 160px - 245px */
            padding-top: clamp(10rem, 25vw, 12.3125rem);
            padding-bottom: 15.5rem;
            background-color: #000;
            position: relative;
            z-index: 1;

            .cs-container {
                text-align: center;
                width: 100%;
                max-width: (1280/16rem);
                margin: auto;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }

            .cs-picture {
                width: 100%;
                margin: 0 0 (12/16rem);
                display: flex;
                justify-content: center;
                align-items: center;
                gap: (16/16rem);
                position: relative;

                /* &:before {
                    content: "";
                    width: 50%;
                    max-width: (150/16rem);
                    height: 1px;
                    background: #b4b2c7;
                    opacity: 1;
                    position: relative;
                    display: block;
                }

                &:after {
                    content: "";
                    width: 50%;
                    max-width: (150/16rem);
                    height: 1px;
                    background: #b4b2c7;
                    opacity: 1;
                    position: relative;
                    display: block;
                } */
            }

            .cs-icon {
                width: 80%;
                /* 100px - 180px */
                max-width: clamp(6.25rem, 18vw, 20.25rem);
                height: auto;
                /* prevents flexbox from squishing it */
                flex: none;
            }

            .cs-int-title {
                /* 39px - 61px */
                font-family: "Trajan Pro Bold";
                font-size: clamp(2.4375rem, 6.5vw, 1.8125rem);
                font-weight: 900;
                line-height: 1.2em;
                text-align: center;
                max-width: (700/16rem);
                margin: 0 0 (16/16rem) 0;
                color: var(--bodyTextColorWhite);
                position: relative;
            }

            .cs-text {
                color: var(--bodyTextColorWhite);
            }

            .cs-background {
                width: 100%;
                height: 100%;
                opacity: 0.7;
                position: absolute;
                top: 0;
                left: 0;
                display: block;
                z-index: -1;

                &:before {
                    /* black overlay box */
                    content: "";
                    width: 100%;
                    height: 100%;
                    //background: #000;
                    opacity: 0.4;
                    position: absolute;
                    display: block;
                    top: 0;
                    left: 0;
                    z-index: 1;
                }

                img {
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 100%;
                    width: 100%;
                    object-fit: cover;
                }
            }
        }
    }
</style>
