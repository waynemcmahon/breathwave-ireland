---
import { Picture } from "astro:assets";
import Button from "@components/ui/button.astro";
import podcast1 from "@assets/images/podcasts/podcast1.png";
import podcast2 from "@assets/images/podcasts/podcast2.png";
const podcasts = [
    {
        title: "Vocal Resonance with Savanna Jones",
        image: podcast1,
        guest: "Savanna Jones",
        role: "Founder of Breathwave",
        description:
            "Join us as we explore the power of vocal resonance and its impact on breathing techniques.",
        href: "/podcasts/savanna-jones",
    },
    {
        title: "Strengthening Our Relationship",
        image: podcast2,
        guest: "Emily and James Parker",
        role: "Teacher and Graphic Designer",
        description:
            "Learn how breathing exercises can strengthen relationships and create deeper connections.",
        href: "/podcasts/emily-and-james-parker",
    },
];
---

<section id="podcasts">
    <div class="cs-container">
        <div class="flex items-center justify-between">
            <h2 class="cs-title">Check out the Breathwave Podcast</h2>
            <Button href="/podcasts" text="See All" class="hidden lg:block" />
        </div>
        <div class="podcast-list">
            {
                podcasts.map((podcast) => (
                    <a href={podcast.href} class="podcast-item">
                        <div class="podcast-image-container">
                            <Picture
                                src={podcast.image}
                                alt={podcast.title}
                                formats={["avif", "webp"]}
                                class="podcast-image"
                            />
                            <div class="podcast-overlay">
                                <div class="podcast-info">
                                    <h3 class="guest-name">{podcast.guest}</h3>
                                    <p class="guest-role">{podcast.role}</p>
                                </div>
                            </div>
                        </div>
                        <div class="podcast-content">
                            <div class="play-button">
                                <div class="play-icon" />
                            </div>
                            <div class="text-content">
                                <p class="podcast-title">{podcast.title}</p>
                                <p class="podcast-description">
                                    {podcast.description}
                                </p>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
        <Button
            href="/podcasts"
            text="See All Podcasts"
            class="lg:hidden mt-8"
        />
    </div>
</section>

<style lang="less">
    @media only screen and (min-width: 0rem) {
        #podcasts {
            padding: var(--sectionPadding);

            .cs-title {
                max-width: 25ch;
                text-align: left;
            }

            .podcast-list {
                display: flex;
                flex-direction: column;
                gap: 4rem;
                margin-top: 2rem;
            }

            .podcast-image-container {
                position: relative;
                border-radius: 1rem;
                overflow: hidden;

                &:hover .podcast-image {
                    transform: scale(1.03);
                    filter: brightness(0.95);
                    transition: all 0.6s ease;
                }
            }

            .podcast-image {
                width: 100%;
                height: auto;
                transition: transform 0.3s ease;
            }

            .podcast-overlay {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                background: linear-gradient(
                    to top,
                    rgba(0, 0, 0, 0.7),
                    transparent
                );
                padding: 2rem;
            }

            .podcast-info {
                text-align: left;
                color: white;
            }

            .guest-name {
                font-size: 1.5rem;
                font-weight: 500;
                margin-bottom: 0.5rem;
                color: white;
            }

            .guest-role {
                font-size: 1rem;
                opacity: 0.9;
                color: white;
            }

            .podcast-content {
                display: flex;
                align-items: flex-start;
                gap: 1.5rem;
                margin-top: 1.5rem;
            }

            .play-button {
                background-color: var(--secondary);
                width: 58px;
                height: 58px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-shrink: 0;
                transition: all 0.3s ease;

                &:hover {
                    filter: brightness(0.8);
                }
            }

            .play-icon {
                width: 0;
                height: 0;
                border-top: 6px solid transparent;
                border-left: 12px solid black;
                border-bottom: 6px solid transparent;
                margin-left: 2px;
            }

            .text-content {
                flex-grow: 1;
            }

            .podcast-title {
                font-size: 1.25rem;
                font-weight: 500;
                margin-bottom: 0.5rem;
                line-height: 1.3;
            }

            .podcast-description {
                font-size: 1rem;
                color: var(--bodyTextColor);
                line-height: 1.5;
            }
        }

        .cs-container {
            width: 100%;
            max-width: (550/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            gap: clamp(0.5rem, 6vw, 1rem);
        }
    }

    @media only screen and (min-width: 64rem) {
        #podcasts {
            .cs-container {
                max-width: (1280/16rem);
                flex-direction: column;
                justify-content: space-between;
                align-items: stretch;

                .podcast-list {
                    flex-direction: row;
                    gap: 2rem;
                }
            }

            .guest-name {
                font-size: 1.75rem;
            }

            .guest-role {
                font-size: 1.125rem;
            }
        }
    }
</style>
